{
    "layer": "top",
    "position": "top",
    "height": 24,
    "margin-right": 5,
    "margin-left": 5,
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "custom/media",
        "tray",
    ],
    "modules-center": [
        "sway/workspaces",
    ],
    "modules-right": [
        "pulseaudio",
        "cpu",
        "memory",
        "temperature",
        "network",
        "battery",
        "clock"
    ],
    // Modules configuration
    "sway/workspaces": {
        "disable-scroll": true,
        "disable-click": true,
        "all-outputs": false,
        "format": "{name}: {icon}",
        "format-icons": {
            "1": "ÔÑ†",
            "2": "ÔÑ°",
            "3": "Ôâ®",
            "4": "Ôüô",
            "7": "ÔÜº",
            "8": "Ôâ©",
            "9": "ÔÜò",
            "10": "ÔÇÜ",
            "urgent": "ÔÅ™",
            "focused": "ÔÜí",
            "default": "ÔÑë"
        }
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "mpd": {
        "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ‚∏®{songPosition}|{queueLength}‚∏© {volume}% ÔÄÅ",
        "format-disconnected": "Disconnected ÔÄÅ",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ",
        "unknown-tag": "N/A",
